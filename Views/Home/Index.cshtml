@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html data-ng-app="app">
<head>
    <style>
        /* This helps the ng-show/ng-hide animations start at the right place. */
        /* Since Angular has this but needs to load, this gives us the class early. */
        .ng-hide {
            display: none !important;
        }
    </style>
    <title data-ng-bind="title">Ideal Solution Sample</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no" />

    <script>
        // Must be first. IE10 mobile viewport fix
        @*if ("-ms-user-select" in document.documentElement.style && navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }*@
    </script>

    <link href="~/Content/ie10mobile.css" rel="stylesheet" />
    <link href="~/Content/bootstrap2.3.2.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <link href="~/Content/customtheme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div data-ng-include="'/app/layout/shell.html'"></div>
        <div id="splash-page" data-ng-show="false">
            <div class="page-splash">
                <div class="page-splash-message">
                    Ideal Solution Sample
                </div>
                <div class="progress progress-striped active page-progress-bar">
                    <div class="bar"></div>
                </div>
            </div>
        </div>
    </div>

    <span data-cc-scroll-to-top></span>

    <!-- Vendor Scripts -->
    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-sanitize.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/ui-bootstrap-tpls-0.7.0.js"></script>
    <script src="~/Scripts/spin.js"></script>

    <!-- Bootstrapping -->
    <script src="~/app/app.js"></script>
    <script src="~/framework/config.js"></script>
    <script src="~/framework/config.exceptionHandler.js"></script>
    <script src="~/framework/config.route.js"></script>

    <!-- common Modules -->
    <script src="~/framework/common/common.js"></script>
    <script src="~/framework/common/logger.js"></script>
    <script src="~/framework/common/spinner.js"></script>

    <!-- common.bootstrap Modules -->
    <script src="~/framework/common/bootstrap/bootstrap.dialog.js"></script>

    <!-- app -->
    <script src="~/app/admin/admin.js"></script>
    <script src="~/app/components/product/product.js"></script>
    <script src="~/app/dashboard/dashboard.js"></script>
    <script src="~/app/layout/shell.js"></script>
    <script src="~/app/layout/sidebar.js"></script>

    <!-- app Services -->
    <script src="~/app/services/datacontext.js"></script>
    <script src="~/app/services/directives.js"></script>
    <script src="~/app/components/product/productRepository.js"></script>
</body>
</html>
